#
# create a static library
#

CFLAGS = -g -Wall
LDFLAGS = -lpcl -cap -lpthread -lrt

OBJS = buffer.o  mailbox-lf.o  monitoring.o  scheduler.o  stream.o  \
          stream_list.o  task.o  taskqueue.o  threading.o  worker.o \
          # mpsctq.o  mailbox.o  


all: liblpel.a

liblpel.a: $(OBJS)
	ar ru $@ $(OBJS)

%.o: %.c
	gcc -c $< $(CFLAGS)

clean:
	rm -fr *.o liblpel.a
